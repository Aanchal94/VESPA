<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:background="#ffffff">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >
    <TextView
        android:id="@+id/txtusername1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Username"
        android:textColor="#372c24"/>

    <EditText
        android:id="@+id/username1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:padding="5dp"

        android:textColor="#000000"
        android:background="@drawable/edittext"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtpassword1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username1"
        android:text="@string/Password"
        android:textColor="#372c24"/>

    <EditText
        android:id="@+id/password1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:padding="5dp"

        android:textColor="#000000"
        android:background="@drawable/edittext"
        android:inputType="textPassword" />
    
     <TextView
        android:id="@+id/email11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:text="Email"
         android:textColor="#372c24"/>

    <EditText
        android:id="@+id/editemail1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="20dip"
        android:singleLine="true"
        android:padding="5dp"

        android:textColor
            ="#000000"
        android:background="@drawable/edittext"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editemail1"
        android:layout_below="@+id/editemail1"
        android:text="Roll No."
        android:textColor="#372c24"/>
<EditText
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rollno"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="20dip"
    android:singleLine="true"
    android:padding="5dp"
    android:textColor="#000000"
    android:background="@drawable/edittext"
    android:inputType="text"
    />



    <TextView
        android:id="@+id/clas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Select Class"
        android:textColor="#372c24"/>
    
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/branch"
        android:layout_below="@+id/clas"
        android:popupBackground="#e3f2fb"
        android:background="#ffffff"
        />

        <Button
            android:id="@+id/signup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="Register"
            android:background="@drawable/button_pressed"
          />

        <Button
            android:id="@+id/login1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="Login"
            android:background="@drawable/button_pressed" />

    </LinearLayout>

</RelativeLayout>
    </ScrollView>